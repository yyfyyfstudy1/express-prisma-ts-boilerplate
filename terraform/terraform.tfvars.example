# ============================================
# 环境配置
# ============================================
aws_region   = "ap-southeast-2"  # AWS 区域（悉尼）
aws_profile  = "default"          # AWS CLI Profile
project_name = "express-api"
environment  = "prod"

# ============================================
# 网络配置
# ============================================
vpc_cidr = "10.0.0.0/16"

# ============================================
# ECS 配置
# ============================================
ecs_task_cpu       = "512"   # 0.5 vCPU
ecs_task_memory    = "1024"  # 1 GB
ecs_desired_count  = 2       # 运行 2 个任务

# ============================================
# 数据库配置
# ============================================
db_instance_class = "db.t3.micro"
db_name           = "mydb"
db_username       = "your_db_username"        # ⚠️ 请修改
db_password       = "ChangeThisPassword123!"  # ⚠️ 请修改为强密码

# ============================================
# 应用配置
# ============================================
jwt_secret_user = "change-this-to-random-string"  # ⚠️ 请修改为随机字符串

